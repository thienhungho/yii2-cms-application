{
    "name": "marqu3s/yii2-summernote",
    "description": "Yii2 Summernote widget. Super simple WYSIWYG editor on Bootstrap",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "summernote",
        "widget",
        "wysiwyg"
    ],
    "homepage": "https://github.com/marqu3s/yii2-summernote",
    "time": "2016-01-15",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Zelenin",
            "email": "aleksandr@zelenin.me",
            "homepage": "http://zelenin.me",
            "role": "Developer"
        },
        {
            "name": "Joao Marques",
            "email": "joao@jjmf.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/zelenin/yii2-summernote-widget/issues",
        "source": "https://github.com/marqu3s/yii2-summernote"
    },
    "require": {
        "yiisoft/yii2": "~2",
        "bower-asset/codemirror": "@stable",
        "bower-asset/summernote": "0.*"
    },
    "autoload": {
        "psr-4": {
            "marqu3s\\summernote\\": ""
        }
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
